@model PhotoSharingApplication.Models.Photo
@{
    ViewBag.Title = "Add a Photo";
}

<h1 class="h4 mb-3">Add a new photo</h1>
<p class="text-muted mb-4">Upload a photo, add a title and a short description. Keep it natural 🌿</p>

@using (Html.BeginForm("Create", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="mb-3">
        @Html.LabelFor(m => m.Title, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "e.g., Morning in the forest" })
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger small" })
    </div>

    <div class="mb-3">
        <label class="form-label">Photo</label>
        <input class="form-control" type="file" name="image" accept="image/*" />
        <div class="form-text">PNG/JPG recommended. The image is stored in the database in this project.</div>
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.Description, new { @class = "form-label" })
        @Html.TextAreaFor(m => m.Description, 4, 40, new { @class = "form-control", placeholder = "A short description…" })
        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
    </div>

    <div class="mb-4">
        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Your name" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger small" })
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">Save</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index","Photo")">Cancel</a>
    </div>
}
