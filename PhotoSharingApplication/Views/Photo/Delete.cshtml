@model PhotoSharingApplication.Models.Photo
@{
    ViewBag.Title = "Delete Photo";
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <h1 class="h5 text-danger mb-2">Delete photo</h1>
        <p class="text-muted mb-4">Are you sure you want to delete this photo? This action cannot be undone.</p>

        <div class="row g-3 align-items-center mb-4">
            <div class="col-12 col-md-5">
                <img class="img-fluid rounded" src="@Url.Action("GetImage","Photo", new { id = Model.PhotoID })" alt="@Model.Title" />
            </div>
            <div class="col-12 col-md-7">
                <div class="fw-semibold">@Model.Title</div>
                <div class="text-muted small">by @Model.UserName • @Model.CreatedDate.ToString("yyyy-MM-dd")</div>
                @if (!string.IsNullOrWhiteSpace(Model.Description))
                {
                    <div class="mt-2">@Model.Description</div>
                }
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Photo", new { id = Model.PhotoID }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">Yes, delete</button>
                <a class="btn btn-outline-secondary" href="@Url.Action("Display","Photo", new { id = Model.PhotoID })">Cancel</a>
            </div>
        }
    </div>
</div>
