<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - PhotoSharing</title>

    <!-- Bootstrap 5 (no bundling) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Your theme -->
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body class="bg-soft">
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand fw-semibold text-success" href="@Url.Content("~/photos")">
                🌿 PhotoSharing
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="nav" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto align-items-lg-center gap-lg-2">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Content("~/photos")">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success btn-sm" href="@Url.Content("~/photos/create")">+ Add photo</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top bg-white">
        <div class="container py-3 small text-muted d-flex justify-content-between flex-wrap gap-2">
            <span>© @DateTime.Now.Year PhotoSharingApplication</span>
            <span>Built with ASP.NET MVC + EF</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
